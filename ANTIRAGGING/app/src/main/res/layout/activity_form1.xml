<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    tools:context="com.example.android.antiragging.Form1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="RAGGING COMPLAINT "
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@android:color/white"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:paddingTop="20dp"
                android:textColor="@android:color/white"
                android:text="Name*"
                android:textStyle="bold"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_margin="15dp"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:background="@android:color/holo_orange_light"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Course*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantcourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                android:background="@android:color/holo_orange_light"
                android:inputType="textAutoComplete"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Branch*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantbranch"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@android:color/holo_orange_light"
                android:inputType="textAutoComplete"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Year*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:inputType="phone"
                android:digits="1234567890"
                android:layout_margin="15dp"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="College contact No*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_margin="15dp"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="College Name*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantcollegename"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@android:color/holo_orange_light"
                android:inputType="textAutoComplete"
                android:textSize="29dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="College Address*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/appliacntcollegeaddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:background="@android:color/holo_orange_light"
                android:inputType="textMultiLine"
                android:textSize="29dp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="College Email.id*"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantcollegeemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@android:color/holo_orange_light"
                android:inputType="textEmailAddress"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Culprit's name"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/culpritname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@android:color/holo_orange_light"
                android:inputType="textAutoComplete"
                android:textSize="29dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text=" COMPLAINT *"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/applicantcomplaint"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/holo_orange_light"
                android:inputType="textMultiLine"
                android:hint=" plz fill your complete complaint"
                android:textSize="29dp"
                android:layout_margin="15dp"
                android:scrollHorizontally="true"
                android:layout_weight="0.47" />

            <Button
                android:id="@+id/raggingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:onClick="raggingsubmit"
                android:textStyle="bold"
                android:text="SUBMIT"
                android:textSize="29dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
