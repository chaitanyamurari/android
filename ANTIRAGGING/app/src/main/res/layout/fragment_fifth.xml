<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.android.antiragging.FifthFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMERGENCY CONTACTS"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_margin="10dp"
        android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:background="@android:color/white"/>


        <TextView
            android:id="@+id/textView"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" CONTACTS NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/emergencyname"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE NUMBER"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/emergencynumber"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:maxLength="10"
            android:inputType="number"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">


            <Button
                android:id="@+id/addcontacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_weight="1"
                android:background="@android:color/white"
                android:layout_marginRight="10dp"
            android:textStyle="bold"/>

            <Button
                android:id="@+id/viewcontacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW CONTACTS"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/addphonebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD FROM PHONEBOOK"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>



</FrameLayout>
